<div class="big_container">
  <div class="form_container">
    <form method="POST" action="/signup" class="form">
      <p class="indication">Create an account</p>
      <div class="form_item_wrapper flexed_item">
        <label class="label">Name</label>
        <input type="text" name="firstname" class="input" placeholder="Dustin">
      </div>
      <div class="form_item_wrapper flexed_item">
        <label class="label">Last Name</label>
        <input type="text" name="lastname" class="input" placeholder="LÃª">
      </div>
      <div class="form_item_wrapper flexed_item">
        <label class="label">Email</label>
        <input type="email" name="email" class="input" placeholder="adresse@mail.com">
      </div>
      <div class="form_item_wrapper flexed_item">
        <label class="label">Password</label>
        <input type="password" name="password" class="input" placeholder="">
      </div>
      {{#if errorMessage}}
      <div class="error_message">{{ errorMessage }}</div>
      {{/if}}
      <button class="btn_form">CREATE ACCOUNT</button>
    </form>
  </div>
  <div class="form_container">
    <form method="POST" action="/login" class="form">
      <p class="indication">Log in</p>
      <div class="form_item_wrapper flexed_item">
        <label class="label">Email</label>
        <input name="email" class="input">
      </div>
      <div class="form_item_wrapper flexed_item">
        <label class="label">Password</label>
        <input type="password" name="password" class="input">
      </div>
      {{#if errorMessage }}
      <div class="error-message">{{ errorMessage }}</div>
      {{/if}}
      <button class="btn_form">LOG IN</button>
    </form>
    <button><a href="/logout">Logout</a></button>
  </div>
</div>